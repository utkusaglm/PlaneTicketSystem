<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.add_checkout_fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="15dp"
            android:text="Add Flight"
            android:textColor="@color/wireframe"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/roundrecycler"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/route"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:alpha=".5"
                android:text="Route"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/flight"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha=".5"
                android:text="FlÄ±ght"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/Seat"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha=".5"
                android:text="Seat"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/Checkout"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checkout"
                android:textColor="@color/arabrengi"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:src="@drawable/saricizgi" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:padding="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/shortname_id_departure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DAB"
                        android:alpha=".5"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        />

                    <TextView
                        android:id="@+id/longname_id_departure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DAB"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        />

                    <TextView
                        android:id="@+id/flight_date_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FLIGHT DATE"
                        android:alpha=".5"
                        android:layout_marginTop="50dp"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        />

                    <TextView
                        android:id="@+id/day_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="May 19"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_marginTop="2dp"
                        />
                    <TextView
                        android:id="@+id/boardintime_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BOARDING TIME"
                        android:alpha=".5"
                        android:layout_marginTop="25dp"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8:35 AM"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_marginTop="2dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/plane"
                        />

                    <TextView
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DAB"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GATE"
                        android:alpha=".5"
                        android:layout_marginTop="39dp"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        />

                    <TextView
                        android:id="@+id/gate_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B5"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_marginTop="2dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SEAT"
                        android:alpha=".5"
                        android:layout_marginTop="25dp"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        />

                    <TextView
                        android:id="@+id/seat_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19A"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_marginTop="2dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginLeft="60dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/shortname_id_arrival"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DAB"
                        android:alpha=".5"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        />

                    <TextView
                        android:id="@+id/longname_id_arrival"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DAB"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FLIGHT NO"
                        android:alpha=".5"
                        android:layout_marginTop="50dp"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        />

                    <TextView
                        android:id="@+id/flight_number_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KB76"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_marginTop="2dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CLASS"
                        android:alpha=".5"
                        android:layout_marginTop="25dp"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        />

                    <TextView
                        android:id="@+id/class_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ECONOMY"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_marginTop="2dp"
                        />
                </LinearLayout>




                </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/saricizgikisa" />
            <TextView
                android:id="@+id/payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$170.00"
                android:textColor="@color/arabrengi"
                android:textSize="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Via"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
            <ImageButton
                android:id="@+id/go_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/goforward"
                android:background="@color/wireframe"
                android:layout_marginTop="50dp"
                android:layout_gravity="right"
                android:layout_marginRight="40dp"
                />




    </LinearLayout>

</LinearLayout>





