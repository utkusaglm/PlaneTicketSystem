<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlightSearch">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/wireframe"
            android:gravity="center"
            android:text="FLY FLY"
            android:textColor="#2699FB"
            android:textSize="50dp"
            android:textStyle="bold"
            app:srcCompat="@drawable/loginname" />

        <EditText
            android:id="@+id/departure_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:drawableStart="@drawable/ic_baseline_local_airport_24"
            android:drawablePadding="5dp"
            android:hint="departure location"
            android:paddingLeft="5dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/arrival_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="20dp"
            android:drawableStart="@drawable/ic_baseline_local_airport_24"
            android:drawablePadding="5dp"
            android:hint="Arrival Location"
            android:paddingLeft="5dp"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Return"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:onClick="return_flight"
                android:text="Return"
                android:textColor="@color/deepwireframe"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonContinue"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:onClick="oneWay_flight"
                android:text="ONE WAY"
                android:textColor="@color/deepwireframe"
                android:textSize="15dp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_baseline_date_range_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Dates"
                android:textColor="@color/deepwireframe"
                android:textSize="20dp"
                android:textStyle="bold"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/deepwireframe"
                android:gravity="center"
                android:text="Select Departure Date" />

            <Button
                android:id="@+id/two"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Arrival time" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/departure_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="Departure Date"
                android:textColor="@color/deepwireframe"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/arrival_date"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:gravity="center"
                android:text="Arrival Date"
                android:textColor="@color/deepwireframe"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
        <Button
            android:id="@+id/see_flights"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_baseline_arrow_forward_24"
            android:layout_margin="10dp"
            android:layout_gravity="right"
            android:onClick="seeFlights"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>